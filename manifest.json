{
  // Required
  "manifest_version": 2,
  "name": "Filter Medium",
  "version": "1.0",

  // Recommended
  "description": "Filters Medium.com articles from Hacker News and Designer News.",
  "icons": { "16": "images/icon16.png",
             "48": "images/icon48.png",
            "128": "images/icon128.png" },

  // Pick one (or none)
  "browser_action": {
    "default_icon": {
      "19": "images/icon19.png",
      "38": "images/icon38.png" },
    "default_title:": "Filter Medium" },

  // Optional
  "author": "Dan Cortes",
  "content_scripts": [
    {
      "matches": ["*://news.layervault.com/*", "*://news.ycombinator.com/*"],
      "css": ["style.css"],
      "js": ["jquery.min.js", "contentscript.js"]
    }
  ]
}
